<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.george.mydeliciousoven.VideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageAboveExoplayer"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="2dp"
                android:src="@drawable/no_video"/>

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/exoPlayerView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="2dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/videoTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardVideoFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <TextView
                android:id="@+id/instructionsOfVideoTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:text="@string/hello_blank_fragment"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>


</FrameLayout>
