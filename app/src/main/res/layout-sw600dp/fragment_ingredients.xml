<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/piece_of_paper"
    tools:context="com.george.mydeliciousoven.IngredientsFragment">

    <LinearLayout
        android:id="@+id/linearForIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/ingredientsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/ingredientsLabel"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>


</FrameLayout>
