<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/linear_master_detail_tablet"
        android:layout_width="@dimen/tablet_linear_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollOfFrameLayouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/ingredients_container_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"/>

                <FrameLayout
                    android:id="@+id/steps_container_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside">
                </FrameLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/video_details_container_tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>